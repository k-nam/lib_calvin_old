<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:orientation="vertical"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<FrameLayout
		android:id="@+id/vividcamera__preview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="false">
		<LinearLayout
			android:id="@+id/vividcamera__buttons"
			android:layout_gravity="bottom"
			android:layout_marginBottom="50sp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<Button
				android:id="@+id/vividcamera__take_picture_button"
				android:text="@string/vividcamera__take_picture_button_text"
				android:textSize="25sp"
				android:background="@android:color/transparent"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1" />
			<Button
				android:id="@+id/vividcamera__take_screenshot_button"
				android:text="@string/vividcamera__take_screenshot_button_text"
				android:textSize="25sp"
				android:background="@android:color/transparent"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1" />
		</LinearLayout>
		<FrameLayout
			android:id="@+id/vividcamera__dark"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
		<TextView
			android:id="@+id/vividcamera__instruction_text"
			android:layout_width="250dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:textColor="@android:color/black"
			android:textSize="25sp" />
		<ImageView
			android:id="@+id/vividcamera__redcircle"
			android:src="@drawable/red_circle"
			android:layout_height="80dp"
			android:layout_width="80dp"
			android:layout_gravity="right">
		</ImageView>
	</FrameLayout>
</LinearLayout>